{#

Carrier Card component

Usage:

{% include "_partials/_carrier_card.twig" with {
  name: "Carrier Name",
  logo: "https://example.com/logo.png",
  url: "https://www.example.com",
  label: "Pay Online",
} %}

#}
{% if carrier is defined and carrier %}
  <div class="p-4 bg-white rounded-md shadow-card">
    <div class="flex flex-col justify-between h-full gap-2">
      <div>
        <img class="object-contain w-full h-20"
          src="{{ carrier.logo }}"
          alt="{{ carrier.name }}" />
      </div>
      {% if carrier.name %}
        <div class="text-sm text-center">
          {{ carrier.name }}
        </div>
      {% endif %}
      <div>
        <a href="{{ carrier.url }}" class="flex btn-outline">
          {{ carrier.label|default('Pay Online') }}
        </a>
      </div>
    </div>
  </div>
{% endif %}
