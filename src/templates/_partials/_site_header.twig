<header id="site-header">
	<section class="max-w-screen-narrow mx-auto">
		<div class="">
			<div class="flex justify-center py-3 px-4 font-semibold text-plum bg-plum-lightest md:justify-end md:bg-white md:p-3 md:pb-0">
				<a href="#">CLIENT PORTAL</a>
				<div class="px-3">{% include "_partials/_retangle.svg.twig"%}</div>
				<a href="#">1-800-8990</a>
			</div>
			<div class="flex justify-between px-4 pb-3 max-h-fit">
				<div>{% include "_partials/_logo.svg.twig"%}</div>
				<div class="flex items-end justify-end">
					<div class="sm:flex md:hidden">
						<button onclick="sidebar()" class="hamburger hamburger--squeeze" type="button">
							<span class="hamburger-box">
								<span class="hamburger-inner"></span>
							</span>
						</button>
					</div>


					<div class="justify-between hidden font-medium items-center md:flex w-96">
						<a href="#">Our Company</a>
						<a href="#">Our Services</a>
						<button class="h-12 w-36 text-white rounded bg-plum-gradient">
							Schedule a Call
						</button>
					</div>
				</div>
			</div>
		</div>
		<div id="sidebar" class="min-w-full min-h-full z-10 hidden md:hidden">Sidebar</div>
	</section>
</header>

<script>
	function sidebar() {
let sideScreen = document.getElementById('sidebar');
if (sideScreen.style.display == 'none') {
sideScreen.style.display = 'flex';
} else {
sideScreen.style.display = 'none';
}
}
</script>
